@{
    ViewBag.Title = "CreateNKAndDelFrom";
}
@using LeaRun.Entity;
@model List<BaseFile>
<script src="~/Content/Scripts/jquery/jquery-1.8.2.min.js"></script>
<script src="~/Content/layer/layer.js"></script>
<script src="~/Content/Scripts/jquery.form.js"></script>
